<p id="notice"><%= notice %></p>

<h1>Listing Depositors</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @depositors.each do |depositor| %>
      <tr>
        <td><%= link_to depositor.name, depositor %></td>
        <td><%= link_to 'Edit Permisisons', edit_permissions_depositor_path(depositor) %></td>
        <td><%= link_to 'Delete', depositor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

