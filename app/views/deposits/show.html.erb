<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @deposit.title %>
</p>

<p>
  <strong>Files in deposit:</strong>
  <%= @deposit.deposit_files %>
</p>

<p>
  <strong>Item in Hyacinth:</strong>
  <%= link_to(@deposit.item_in_hyacinth,
      HYACINTH_CONFIG[:url] + '#' +
      Rack::Utils.escape('{"controller":"digital_objects","action":"show","pid":"'+ "#{@deposit.item_in_hyacinth}"+'"}'),
      target: '_blank') %>
</p>

<p>
  <strong>Depositor:</strong>
  <%= @deposit.depositor.name if @deposit.depositor%>
</p>

<p>
  <strong>Depositor User ID:</strong>
  <%= @deposit.depositor_user_id %>
</p>

<p>
  <strong>Collection Slug:</strong>
  <%= @deposit.collection_slug %>
</p>

<p>
  <strong>Deposit date:</strong>
  <%= @deposit.created_at %>
</p>

<%= link_to 'Delete', @deposit, method: :delete, data: { confirm: 'Are you sure?' } %>
