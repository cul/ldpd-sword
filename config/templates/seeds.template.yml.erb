base: &BASE
  collections:
    proquest_collection:
      name: 'ProQuest'
      slug: proquest-collection
      atom_title: 'ProQuest Collection'
      hyacinth_project_string_key: academic_commons
      parser: 'proquest'
    springer_nature_collection:
      name: 'Springer Nature'
      slug: springer-nature-collection
      atom_title: 'Springer Nature Collection'
      hyacinth_project_string_key: academic_commons
      parser: 'springer-nature'
    academic_commons_collection:
      name: 'Academic Commons'
      slug: academic-commons-collection
      atom_title: 'Academic Commons Collection'
      hyacinth_project_string_key: academic_commons
      parser: 'academic-collections'
  # following pairs up depositors and collections
  depositor_collection_pairings:
    first_pairing:
      depositor: proquest_depositor
      collection: proquest_collection
development:
  <<: *BASE
  admin_users:
    admin_user:
      name: 'Fake Admin'
      email: fake-dev-admin@library.columbia.edu
      password: <%= SecureRandom.hex(16) %>
